<h1 style="padding-left: 10px"><%= @cocktail.name %></h1>
<div class="show-container">
  <div class="cocktail-image">
    <%= cl_image_tag(@cocktail.photo, width: 300, height: 600, crop: :fit) %>
  </div>
  <div class="cocktail-desc">
    <ul>
      <% @doses.each do |dose| %>
      <li><span><%= link_to dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?"} do %>
          <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </span>
        <b><%= dose.description%></b> of <%= dose.ingredient.name %></li>
      <% end %>
    </ul>
  </div>
</div>

<%= link_to "Add a new ingredient to this cocktail", new_cocktail_dose_path(@cocktail), style: 'align-content: center' %>


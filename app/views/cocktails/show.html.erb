<h1><%= @cocktail.name %></h1>
<ul>
  <% @doses.each do |dose| %>
  <li><span><%= link_to dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?"} do %>
      <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
    </span> -
    <%= dose.description%> of <%= dose.ingredient.name %></li>
  <% end %>
</ul>

<%= link_to "Add a new ingredient to this cocktail", new_cocktail_dose_path(@cocktail) %>

